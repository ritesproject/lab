{
  "title": "Radioactivity Model + Graph + Graph + Table",
  "publicationStatus": "draft",
  "subtitle": "",
  "about": "",
  "fontScale": 1,
  "aspectRatio": 1,
  "models": [
    {
      "type": "md2d",
      "id": "syringe$0",
      "url": "imports/legacy-mw-content/converted/rites/empty.json",
      "viewOptions": {
        "controlButtons": ""
      },
      "onLoad": [
        "set('timeStep',1);",
        "set('timeStepsPerTick',1);",
        "var count = 0,",
        "    isotope = [],",
        "    parents = 1000,",
        "    parents0 = parents,",
        "    parents1 = parents,",
        "    daughters = 0;",
        "batch(function(){",
        "  while(count < parents){",
        "    if( addAtom({pinned: true, x: Math.random()*get('width'), y: Math.random()*get('height'), element: 0}) ) {",
        "      ++count;",
        "      isotope.push(0);",
        "    }",
        "  }",
        "  set('numElementsParent', count);",
        "});",
        "appendDataPropertiesToComponent('half-life-time-table');",
        "appendDataPropertiesToComponent('half-life-time-table');",
        "appendDataPropertiesToComponent('half-life-time-table');",
        "appendDataPropertiesToComponent('half-life-time-table');",
        "appendDataPropertiesToComponent('half-life-time-table');",
        "onPropertyChange('time',function(t){",
        "  batch(function(){",
        "    var decaying = true;",
        "    for(var i = 0; i < isotope.length; i++) {",
        "      if (isotope[i] === 0 && Math.random() < 0.05) {",
        "        setAtomProperties(i,{element: 1});",
        "        isotope[i] = 1;",
        "        --parents; ++daughters;",
        "        --parents0;",
        "        if (parents0 <= 0.5 * parents1) {",
        "          parents1 = parents0;",
        "          // TODO this has some odd behavior if the stop comes early in a tick",
        "          decaying = false;",
        "          break;",
        "        }",
        "      }",
        "    }",
        "    set('numElementsParent',parents);",
        "    set('numElementsChild',daughters);",
        "    if (!decaying) {",
        "      stop();",
        "      set('numHalfLives', get('numHalfLives')+1);",
        "    }",
        "  });",
        "});"
      ]
    }
  ],
  "parameters": [
    {
      "name": "numElementsParent",
      "initialValue": 0,
      "label": "Parent isotopes"
    },
    {
      "name": "numElementsChild",
      "initialValue": 0,
      "label": "Daughter isotopes"
    },
    {
      "name": "numHalfLives",
      "initialValue": 0,
      "label": "Half life"
    }
  ],
  "components": [
    {
      "type": "numericOutput",
      "id": "num-atoms-parent",
      "property": "numElementsParent",
      "label": " "
    },
    {
      "type": "numericOutput",
      "id": "num-atoms-child",
      "property": "numElementsChild",
      "label": " "
    },
    {
      "type": "text",
      "id": "label-parents",
      "text": "Parent isotopes"
    },
    {
      "type": "text",
      "id": "label-daughters",
      "text": "Daughter isotopes"
    },
    {
      "type": "button",
      "id": "run-model",
      "text": "Go",
      "action": [
        "start()"
      ]
    },
    {
      "type": "button",
      "id": "reset-model",
      "text": "Reset",
      "action": "reload()"
    },
    {
      "type": "table",
      "id": "half-life-time-table",
      "streamDataFromModel": false,
      "indexColumn": false,
      "propertyColumns": [],
      "userColumns": ["Half Life", "Parent isotopes", "Daughter isotopes", "Total Isotopes", "% Parents", "% Daughters"],
      "width": "100%",
      "height": "12em"
    }
  ],
  "layout": {
    "right": [
      ["run-model"],
      ["reset-model"],
      ["label-parents"],
      ["num-atoms-parent"],
      ["label-daughters"],
      ["num-atoms-child"]
    ],
    "bottom": [
      "half-life-time-table"
    ]
  },
  "template": [
    {
      "id": "right",
      "left": "model.right",
      "top": "model.top"
    },
    {
      "id": "bottom",
      "left": "model.left",
      "top": "model.bottom",
      "width": "interactive.width",
      "padding-right": "1em",
      "padding-bottom": "1em",
      "padding-top": "0.5em"
    }
  ]
}
