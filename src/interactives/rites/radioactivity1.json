{
  "title": "Radioactivity : Activity 2 : Page 1",
  "publicationStatus": "draft",
  "subtitle": "",
  "about": "",
  "aspectRatio": 1,
  "fontSize": 0.7,
  "models": [
    {
      "type": "md2d",
      "id": "syringe$0",
      "url": "imports/legacy-mw-content/converted/rites/empty.json",
      "viewOptions": {
        "controlButtons": ""
      },
      "onLoad": [
        "setComponentDisabled('run-model', false);",
        "set('timeStep',1);",
        "set('timeStepsPerTick',1);",
        "var count = 0,",
        "    parents = 1000,",
        "    prevParents = parents,",
        "    daughters = 0;",
        "batch(function(){",
        "  while(count < parents){",
        "    if( addAtom({pinned: true, x: Math.random()*get('width'), y: Math.random()*get('height'), element: 0}) ) {",
        "      ++count;",
        "    }",
        "  }",
        "  set('numElementsParent', count);",
        "  set('prevParents', count);",
        "});",
        "onPropertyChange('time',function(t){",
        "  var decaying = true;",
        "  batch(function(){",
        "    // reset these in case the model has been scrubbed",
        "    parents      = get('numElementsParent');",
        "    daughters    = get('numElementsChild');",
        "    prevParents  = get('prevParents');",
        "    for(var i = 0; i < 1000; i++) {",
        "      if (getAtomProperties(i).element === 0 && Math.random() < 0.05) {",
        "        setAtomProperties(i,{element: 1});",
        "        --parents;",
        "        ++daughters;",
        "        if (parents <= 0.5 * prevParents) {",
        "          set('prevParents', parents);",
        "          decaying = false;",
        "          break;",
        "        }",
        "      }",
        "    }",
        "    set('numElementsParent',parents);",
        "    set('numElementsChild',daughters);",
        "    if (!decaying) {",
        "      set('numHalfLives', get('numHalfLives')+1);",
        "      addGraphAnnotation('num-parents-graph',{",
        "        type: 'line',",
        "        data: {",
        "          x1: t/1000,",
        "          x2: t/1000",
        "        }",
        "      });",
        "      addGraphAnnotation('num-parents-graph',{",
        "        type: 'line',",
        "        data: {",
        "          y1: parents,",
        "          y2: parents,",
        "          stroke: '#0a0'",
        "        }",
        "      });",
        "      addGraphAnnotation('num-daughters-graph',{",
        "        type: 'line',",
        "        data: {",
        "          x1: t/1000,",
        "          x2: t/1000",
        "        }",
        "      });",
        "      addGraphAnnotation('num-daughters-graph',{",
        "        type: 'line',",
        "        data: {",
        "          y1: daughters,",
        "          y2: daughters,",
        "          stroke: '#0a0'",
        "        }",
        "      });",
        "    }",
        "  });",
        "});"
      ]
    }
  ],
  "parameters": [
    {
      "name": "numElementsParent",
      "initialValue": 0
    },
    {
      "name": "numElementsChild",
      "initialValue": 0
    },
    {
      "name": "prevParents",
      "initialValue": 0
    },
    {
      "name": "numHalfLives",
      "initialValue": 0,
      "onChange": [
        "if (value >= 5) {",
        "  stop();",
        "  setComponentDisabled('run-model', true);",
        "}"
      ]
    }
  ],
  "components": [
    {
      "type": "numericOutput",
      "id": "num-atoms-parent",
      "property": "numElementsParent",
      "label": "Parent atoms"
    },
    {
      "type": "numericOutput",
      "id": "num-atoms-child",
      "property": "numElementsChild",
      "label": "Daughter atoms"
    },
    {
      "type": "button",
      "id": "run-model",
      "text": "Go",
      "action": [
        "if (isStopped()) {",
        "  start();",
        "} else {",
        "  stop();",
        "}"
      ]
    },
    {
      "type": "button",
      "id": "reset-model",
      "text": "Reset",
      "action": "reload()"
    },
    {
      "type": "graph",
      "id": "num-parents-graph",
      "properties": ["numElementsParent"],
      "width": "100%",
      "height": "100%",
      "ymin": 0,
      "ymax": 1000,
      "ylabel": "Parent isotopes",
      "xmin": 0,
      "xmax": 0.1,
      "xTickCount": 10,
      "yTickCount": 5,
      "xFormatter": ".1r",
      "title": "Parent isotopes"
    },
    {
      "type": "graph",
      "id": "num-daughters-graph",
      "properties": ["numElementsChild"],
      "width": "100%",
      "height": "100%",
      "ymin": 0,
      "ymax": 1000,
      "ylabel": "Daughter isotopes",
      "xmin": 0,
      "xmax": 0.1,
      "xTickCount": 10,
      "yTickCount": 5,
      "xFormatter": ".1r",
      "title": "Daughter isotopes"
    }
  ],
  "layout": {
    "right-controls": [
      ["run-model","reset-model"],
      ["num-atoms-parent","num-atoms-child"]
    ],
    "right-graph-parent": [
      "num-parents-graph"
    ],
    "right-graph-daughter": [
      "num-daughters-graph"
    ]
  },
  "template": [
    {
      "id": "right-controls",
      "left": "model.right",
      "top": "model.top",
      "padding-left": "0.5em",
      "width": "24em",
      "height": "8em"
    },
    {
      "id": "right-graph-parent",
      "left": "model.right",
      "top": "right-controls.bottom",
      "padding-left": "0.5em",
      "width": "24em",
      "height": "10em"
    },
    {
      "id": "right-graph-daughter",
      "left": "model.right",
      "top": "right-graph-parent.bottom",
      "padding-left": "0.5em",
      "width": "24em",
      "height": "10em"
    }
  ]
}
