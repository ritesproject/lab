{
  "title": "Area versus Number of Atoms",
  "publicationStatus": "public",
  "subtitle": "Demo showing how the area (two-dimensional \"volume\") of a gas at constant temperature and pressure changes with the number of atoms",
  "about": "",
  "fontScale": 0.8,
  "models": [
    {
      "type": "md2d",
      "id": "main-model",
      "url": "imports/legacy-mw-content/converted/new-examples-for-nextgen/area-versus-applied-pressure$0.json",
      "viewOptions": {
        "controlButtons": "play_reset_step"
      }
    }
  ],
  "outputs": [
    {
      "name": "area",
      "unitAbbreviation": "nmÂ²",
      "label": "Area",
      "value": "return getObstacleProperties(0).x * get('height');"
    }
  ],
  "parameters": [
    {
      "name": "number",
      "label": "Number of Atoms",
      "unitAbbreviation": "",
      "onChange": [
        "var N = getNumberOfAtoms(),",
        "    props,",
        "    radius,",
        "    height,",
        "    width,",
        "    i;",
        "value = Math.round(value);",
        "if (value > N) {",
        "  props = getAtomProperties(0);",
        "  radius = props.radius",
        "  delete props.radius;",
        "  delete props.px;",
        "  delete props.py;",
        "  delete props.speed;",
        "  delete props.mass",
        "  height = get('height');",
        "  width = getObstacleProperties(0).x;",
        "  batch(function() {",
        "    for (i = N; i < value; i++) {",
        "      if (width < 3 * radius) {",
        "        props.x = 0",
        "      } else {",
        "        props.x = Math.random() * (width - 2*radius);",
        "      }",
        "      props.y = Math.random() * height;",
        "      addAtom(props, { suppressCheck: true });",
        "    }",
        "  });",
        "  minimizeEnergy();",
        "} else if (value < N) {",
        "  batch(function() {",
        "    for (i = value; i < N; i++) {",
        "      removeAtom(0);",
        "    }",
        "  });",
        "}"
      ],
      "initialValue": 33
    }
  ],
  "components": [
    {
      "type": "slider",
      "id": "number-slider",
      "min": 10,
      "max": 60,
      "displayValue": "return format('.1f')(value)",
      "labels": [
        {
          "value": 10,
          "label": "10"
        },
        {
          "value": 60,
          "label": "60"
        }
      ],
      "steps": 50,
      "title": "Number of Atoms",
      "property": "number",
      "width": "15em"
    },
    {
      "type": "numericOutput",
      "id": "area-display",
      "property": "area",
      "orientation": "vertical",
      "displayValue": "return format('.1f')(value)"
    }
  ]
}