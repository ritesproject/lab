{
  "title": "Viewport Demo",
  "publicationStatus": "public",
  "subtitle": "Change viewport options to render different areas of the model",
  "models": [
    {
      "type": "md2d",
      "id": "simple-gas$0",
      "url": "imports/legacy-mw-content/converted/new-examples-for-nextgen/simple-gas$0.json",
      "viewOptions": {
        "controlButtons": "play_reset",
        "gridLines": true,
        "xunits": true,
        "yunits": true,
        "viewPortDrag": true
      }
    }
  ],
  "components": [
    {
      "id": "viewPortX",
      "type": "slider",
      "title": "viewPortX",
      "property": "viewPortX",
      "displayValue": "return format('.1f')(value)",
      "min": -4,
      "max": 4,
      "steps": 100
    },
    {
      "id": "viewPortY",
      "type": "slider",
      "title": "viewPortY",
      "property": "viewPortY",
      "displayValue": "return format('.1f')(value)",
      "min": -2.5,
      "max": 2.5,
      "steps": 50
    },
    {
      "id": "viewPortZoom",
      "type": "slider",
      "title": "viewPortZoom",
      "property": "viewPortZoom",
      "displayValue": "return format('.1f')(value)",
      "min": 0.1,
      "max": 5,
      "steps": 100
    },
    {
      "id": "xunits",
      "type": "checkbox",
      "text": "xunits",
      "property": "xunits"
    },
    {
      "id": "yunits",
      "type": "checkbox",
      "text": "yunits",
      "property": "yunits"
    },
    {
      "id": "xlabel",
      "type": "checkbox",
      "text": "xlabel",
      "property": "xlabel"
    },
    {
      "id": "ylabel",
      "type": "checkbox",
      "text": "ylabel",
      "property": "ylabel"
    },
    {
      "id": "gridLines",
      "type": "checkbox",
      "text": "gridLines",
      "property": "gridLines"
    },
    {
      "id": "drag",
      "type": "checkbox",
      "text": "viewPortDrag",
      "property": "viewPortDrag"
    }
  ],
  "layout": {
    "bottom": [
      "viewPortX",
      "viewPortY",
      "viewPortZoom"
    ],
    "right": [
      [
        "xunits"
      ],
      [
        "yunits"
      ],
      [
        "xlabel"
      ],
      [
        "ylabel"
      ],
      [
        "gridLines"
      ],
      [
        "drag"
      ]
    ]
  }
}