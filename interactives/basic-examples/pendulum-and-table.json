    {
      "component": "clear-all",
      "text": [
        "Clear **all** the data, including data in the **Experiment Table**."
      ]
    }
  ],
  "layout": {
    "experiment-controls": [
      [ "start-run", "stop-run", "save-run", "next-run", "clear-all" ]
    ],
    "bottom-left": [
      [ "experiment-table" ]
    ],
    "top-right": [
      [ "length-slider" ],
      [ "period-display" ],
      [ "time-series-table" ]
    ]
  },
  "template": [
    {
      "id": "experiment-controls",
      "fontScale": "0.9",
      "top": "model.bottom",
      "left": "model.left",
      "width": "model.width",
      "align": "center",
      "padding-top": "0.5em",
      "padding-left": "0em"
    },
    {
      "id": "bottom-left",
      "fontScale": "0.9",
      "top": "experiment-controls.bottom",
      "left": "model.left",
      "width": "model.width",
      "align": "center",
      "padding-top": "0.5em",
      "padding-bottom": "0.5em",
      "padding-left": "0em"
    },
    {
      "id": "top-right",
      "fontScale": "0.9",
      "left": "model.right",
      "height": "24em",
      "padding-top": "0.2em",
      "padding-bottom": "0.5em",
      "padding-left": "1em",
      "padding-right": "0.5em"
    }
  ]
}