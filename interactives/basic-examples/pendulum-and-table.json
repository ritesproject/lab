{
  "title": "Pendulum: rod length and graph",
  "publicationStatus": "public",
  "subtitle": "Explore how rod length affects the period of a pendulum.",
  "about": [
  ],
  "aspectRatio": 1.8,
  "fontScale": 0.8,
  "models": [
    {
      "type": "md2d",
      "id": "pendulum1$0",
      "url": "models/md2d/basic-examples/pendulum.json",
      "viewOptions": {
        "controlButtons": "",
        "gridLines": false,
        "xunits": false,
        "yunits": false,
        "showClock": false,
        "velocityVectors": {
          "length": 10
        }
      },
      "modelOptions": {
        "unitsScheme": "mks",
        "timeStepsPerTick": 167,
        "timeStep": 1,
        "modelSampleRate": 60
      },
      "onLoad": [
        "function resetAngle() {",
        "  set({startingAngle: get('startingAngle')});",
        "}",
        "function stopMotion() {",
        "  stop();",
        "  setAtomProperties(1, { vx: 0, vy: 0 });",
        "}",
        "onPropertyChange('rodLength', resetAngle);"
      ]
    }
  ],
  "outputs": [
    {
      "name": "currentAngle",
      "unitAbbreviation": "°",
      "label": "Angle",
      "value": [
        "var a0 = getAtomProperties(0),",
        "    a1 = getAtomProperties(1),",
        "    ang = Math.atan2(a1.y-a0.y, a1.x-a0.x) * rad2deg;",
        "return (a1.x < a0.x && a1.y >= a0.y) ? ang - 270 : ang + 90;"
      ]
    }
  ],
  "filteredOutputs": [
    {
      "name": "period",
      "unitType": "time",
      "label": "Period",
      "property": "currentAngle",
      "type": "SimplePeriod"
    }
   ],
  "parameters": [
    {
      "name": "rodLength",
      "label": "Rod length",
      "unitAbbreviation": "cm",
      "onChange": "var len = value/100, a0 = getAtomProperties(0), a1 = getAtomProperties(1), angle = Math.atan((a1.x-a0.x)/(a0.y-a1.y)); setRadialBondProperties(0, { length: len }); setAtomProperties(1, {x: a0.x+Math.sin(angle)*len, y: a0.y-Math.cos(angle)*len, vx: 0, vy: 0});",
      "initialValue": 100
    },
    {
      "name": "startingAngle",
      "label": "Starting angle",
      "unitAbbreviation": "°",
      "onChange": "var a0 = getAtomProperties(0), angle = value*deg2rad, len = getRadialBondProperties(0).length; setAtomProperties(1, {x: a0.x+Math.sin(angle)*len, y: a0.y-Math.cos(angle)*len, vx: 0, vy: 0});",
      "initialValue": 45
    }
  ],
  "experiment": {
    "timeSeries": {
      "time": "displayTime",
      "properties": [
        "currentAngle"
      ]
    },
    "parameters": {
      "inputs": [
        "rodLength"
      ],
      "outputs": [
        "period"
      ]
    },
    "destinations": [
      {
        "type": "timeSeries",
        "componentIds": [
          "time-series-table"
        ],
        "properties": [
          "displayTime",
          "currentAngle"
        ]
      },
      {
        "type": "parameterSeries",
        "componentIds": [
          "experiment-table"
        ],
        "properties": [
          "rodLength",
          "period"
        ]
      }
    ],
    "stateButtons": {
      "startRun": "start-run",
      "stopRun": "stop-run",
      "saveRun": "save-run",
      "nextRun": "next-run",
      "clearAll": "clear-all"
    },
    "onReset": [
      "resetAngle();",
      "stopMotion();",
      "set('rodLength', get('rodLength'));"
    ]
  },
  "components": [
    {
      "type": "slider",
      "id": "length-slider",
      "min": 10,
      "max": 200,
      "width": "14em",
      "tooltip": "Adjust length of pendulum.",
      "displayValue": "return format('f')(value)",
      "labels": [
        {
          "value": 10,
          "label": "10 cm"
        },
        {
          "value": 200,
          "label": "2 m"
        }
      ],
      "steps": 19,
      "title": "Rod length (cm)",
      "property": "rodLength"
    },
    {
      "type": "numericOutput",
      "id": "period-display",
      "property": "period",
      "displayValue": "return format('.3r')(value)"
    },

    {
      "type": "button",
      "id": "start-run",
      "text": "Start",
      "tooltip": "Start experiment run. Will stop automatically after 8s.",
      "action": ""
    },
    {
      "type": "button",
      "id": "stop-run",
      "text": "Stop",
      "tooltip": "Stop currently running experiment.",
      "action": ""
    },
    {
      "type": "button",
      "id": "save-run",
      "text": "Save",
      "tooltip": "Save parameter data and period from current run into Experiment Table.",
      "action": ""
    },
    {
      "type": "button",
      "id": "next-run",
      "text": "Next Run",
      "tooltip": "Clear just the last experiment run and setup next run.",
      "action": ""
    },
    {
      "type": "button",
      "id": "clear-all",
      "text": "Clear All",
      "tooltip": "Clear all experiment data.",
      "action": ""
    },
    {
      "type": "table",
      "id": "time-series-table",
      "title": "Time Series Table",
      "clearDataOnReset": true,
      "streamDataFromModel": true,
      "visibleRows": 4,
      "height": "24em",
      "width": "auto",
      "indexColumn": true,
      "propertyColumns": [
        "displayTime",
        "currentAngle"
      ]
    },
    {
      "type": "table",
      "id": "experiment-table",
      "title": "Experiment Table",
      "clearDataOnReset": false,
      "streamDataFromModel": false,
      "visibleRows": 4,
      "height": "10em",
      "width": "20em",
      "indexColumn": true,
      "propertyColumns": [
        "rodLength",
        "period"
      ]
    }
  ],
  "helpTips": [
    {
